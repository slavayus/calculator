<resources>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backspaceButton">@drawable/backspace_button_light</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="backspaceButton">@drawable/backspace_button_dark</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_margin">@dimen/button_layout_margin</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:typeface">serif</item>
        <item name="android:background">@drawable/buttons</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ImageButton" parent="Button">
        <item name="android:src">?attr/backspaceButton</item>
    </style>

    <style name="Layout">
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>

    <style name="TextView">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:gravity">bottom|right</item>
        <item name="android:textSize">@dimen/text_view_text_size</item>
        <item name="android:typeface">serif</item>
    </style>
</resources>
